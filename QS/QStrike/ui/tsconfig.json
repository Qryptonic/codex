{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution":"Node",
    "jsx":"react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "lib": ["DOM", "ES2022"],
    "types": ["vite/client"],
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests"]
}